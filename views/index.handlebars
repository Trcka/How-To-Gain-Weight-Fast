<h1 style = 'text-align: center'>Eat-Da-Burger Get-That-Weight!</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4" id = "icon">
  </div>
</div>
<div class = "row">
  <div class = "col-md-6" style = "text-align: center;">
    <h2>Burgers Ready To Be Devoured</h2>
    <ul  style = "list-style: none; padding: 0; margin: 0;">
      {{#each burger}}
          {{#unless this.devoured}}
            <li>
              <h3>{{this.burger_name}}</h3>
              <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="eat" value="true">
                <button type="submit">Devour!</button>
              </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class = "col-md-6" style = "text-align: center;">
    <h2>Burgers Already DESTROYED!</h2>
    <ul style = "list-style: none; padding: 0; margin: 0;">
      {{#each burger}}
          {{#if this.devoured}}
            <li>
              <h3>{{this.burger_name}}</h3>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class = "row" style = "text-align: center; margin-bottom: 20px;">
<h2>Add a burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">
  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>
  <button type="submit">Add Burger</button>
</form>
</div>
